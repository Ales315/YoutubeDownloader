<UserControl x:Class="YoutubeDownloader.UserControls.PlaylistUC"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:gif="http://wpfanimatedgif.codeplex.com"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:local="clr-namespace:YoutubeDownloader.UserControls"
         xmlns:uc="clr-namespace:YoutubeDownloader.UserControls"
         xmlns:vm="clr-namespace:YoutubeDownloader.ViewModels" 
         xmlns:converter="clr-namespace:YoutubeDownloader.Converters" 
         mc:Ignorable="d" 
         Height="auto" Width="auto" MinWidth="700" MinHeight="300"
         Background="Transparent" 
         TextOptions.TextRenderingMode="ClearType"
         SnapsToDevicePixels="True">

    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converter:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
        <converter:NumberFormatterConverter x:Key="NumberFormatterConverter"/>
    </UserControl.Resources>

    <Grid Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Search filters-->
        <Border Grid.Row="0" Grid.Column="1" Panel.ZIndex="-1" Height="auto" Width="100"
                Background="{DynamicResource MaterialDesignBackground}" CornerRadius="8"
                HorizontalAlignment="Left" Margin="20,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.25" Direction="250"/>
            </Border.Effect>
        </Border>


        <StackPanel Orientation="Horizontal" Margin="12,0,0,0" HorizontalAlignment="Left">
            <Grid Margin="15,0,0,0" Grid.Row="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Panel.ZIndex="2" Grid.Column="1" TextAlignment="Left" TextWrapping="NoWrap" 
                   VerticalAlignment="Center"
                   Margin="2,5,5,0"
                   Height="45" FontSize="14" 
                   Foreground="{DynamicResource MaterialDesignBody}"  
                   Padding="0,10,0,0"
                   Text="Select all"/>
                <CheckBox x:Name="checkboxNotifications" Grid.Column="0" 
                  HorizontalAlignment="Left" VerticalAlignment="Center"
                  Style="{DynamicResource MaterialDesignCheckBox}" 
                  Width="42" Height="42" Cursor="Hand" 
                  Background="{DynamicResource MaterialDesignPrimaryBrush}"
                  IsChecked="{Binding IsVideosChecked}"/>
            </Grid>
        </StackPanel>
        <!--Search results-->
        <Grid Panel.ZIndex="4" Grid.Row="1">
            <Border Margin="10,10,10,10" Background="Transparent">
                <ListView x:Name="SearchListView" ItemsSource="{Binding PlaylistVideoViewModels}" 
                          HorizontalContentAlignment="Stretch"
                          Style="{StaticResource MaterialDesignCardsListBox}" 
                          Background="{DynamicResource MaterialDesignPaper}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <uc:PlaylistVideoCard x:Name="PlaylistVideoCard" HorizontalAlignment="Stretch" Margin="10,7,10,0" DataContext="{Binding}"
                                         MouseDown="PlaylistVideoCard_MouseDown"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!--Loading gifs and text-->
            <StackPanel Orientation="Vertical" Panel.ZIndex="1" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image x:Name="gifLoadingVideos"  Width="64" 
                       gif:ImageBehavior.AnimatedSource="/Resources/Gifs/LoadingVideo.gif" gif:ImageBehavior.AnimationSpeedRatio="1.1" gif:ImageBehavior.AnimateInDesignMode="True" gif:ImageBehavior.AutoStart="True"
                       Visibility="{Binding IsVideoListLoaded, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                       IsVisibleChanged="gifLoadingVideos_IsVisibleChanged"/>
                <TextBlock Text="Loading playlist videos..."
                           Visibility="{Binding IsVideoListLoaded, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                           FontSize="16" FontWeight="Bold" Opacity="0.8"
               />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
